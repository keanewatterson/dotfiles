{{- /*
Populate the provided Vars map with common PATH entries so that templates may
include the content rather than duplicating it.
*/ -}}
{{- $vars := .Vars -}}
{{- $root := .Root -}}
{{- $_ := set $vars "pathList" (list
  "/bin"
  "/usr/bin"
  "/usr/local/bin"
  "/opt/homebrew/bin"
  "/snap/bin"
  (joinPath $root.chezmoi.homeDir ".cargo" "bin")
  (joinPath $root.chezmoi.homeDir ".local" "bin")
) -}}
