{{ $path_list := (list
  "/bin"
  "/usr/bin"
  "/usr/local/bin"
  "/opt/homebrew/bin"
  "/snap/bin"
  (joinPath .chezmoi.homeDir ".cargo" "bin")
  (joinPath .chezmoi.homeDir ".local" "bin")
  )
-}}

{{ if findExecutable "micromamba" $path_list }}

init_mamba() {

{{ template "init-mamba.zsh" . }}

if (( $# == 1 )); then
  micromamba activate "${1}"
fi
}

{{- end -}}
