wanip() {

  local protocol=""
  local endpoint=""

  for arg in "$@"; do
    case "$arg" in
      -4)
        protocol="-4"
        ;;
      -6)
        protocol="-6"
        ;;
      -json)
        endpoint="/json"
        ;;
      *)
        printf "$0: [-4|-6] [-json]\n"
        return
        ;;
    esac
  done

  curl -s $protocol "https://ifconfig.co${endpoint}"
}
