{{ $path_list := (list
  "/bin"
  "/usr/bin"
  "/usr/local/bin"
  "/opt/homebrew/bin"
  "/snap/bin"
  (joinPath .chezmoi.homeDir ".cargo" "bin")
  (joinPath .chezmoi.homeDir ".local" "bin")
  )
-}}

cdl() {
{{ if findExecutable "eza" $path_list -}}
    builtin cd "$@" && eza -aglF --git --time-style long-iso 
{{ else -}}
    builtin cd "$@" && ls -ahl
{{ end -}}
}
